#include <dt-bindings/zmk/matrix_transform.h>

/ {
    chosen {
        zmk,kscan = &kscan0;
        zmk,matrix_transform = &default_transform;
    };

    default_transform: keymap_transform_0 {
        compatible = "zmk,matrix-transform";
        columns = <10>;
        rows = <4>;

        map = <
	RC(0,0)  RC(1,0)  RC(2,0)  RC(3,0)  RC(4,0)    RC(9,0)	RC(8,0)  RC(7,0)  RC(6,0)  RC(5,0)
	RC(0,1)  RC(1,1)  RC(2,1)  RC(3,1)  RC(4,1)    RC(9,1)  RC(8,1)  RC(7,1)  RC(6,1)  RC(5,1)
	RC(0,2)  RC(1,2)  RC(2,2)  RC(3,2)  RC(4,2)    RC(9,2)  RC(8,2)  RC(7,2)  RC(6,2)  RC(5,2)
		          RC(2,3)  RC(3,3)  RC(0,3)    RC(5,3)  RC(8,3)  RC(7,3)
        >;
    };

    kscan0: kscan {
        compatible = "zmk,kscan-gpio-matrix";
        label = "KSCAN";

        diode-direction = "row2col";
        row-gpios
            = <&pro_micro 21  GPIO_ACTIVE_HIGH>
            , <&pro_micro 18  GPIO_ACTIVE_HIGH>
            , <&pro_micro 5  GPIO_ACTIVE_HIGH>
            , <&pro_micro 4 GPIO_ACTIVE_HIGH>
            ;
        
    };
};
